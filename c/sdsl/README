#---------------------------------------------------------------------------# 
# How To Build
#---------------------------------------------------------------------------# 
{{{
	autoreconf --install
	./configure
	make
}}}

#---------------------------------------------------------------------------# 
# How To Install
#---------------------------------------------------------------------------# 
{{{
	autoreconf --install
	./configure
	make
	sudo make install
}}}

#---------------------------------------------------------------------------# 
# How To Distribute
#---------------------------------------------------------------------------# 
{{{
	autoreconf --install
	./configure
	make
	make dist
}}}
