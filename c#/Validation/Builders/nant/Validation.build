<project name="Validation Solution Builder" default="rebuild">
    <property name="configuration" value="release"/>
    
    <target name="clean" description="Delete all previously compiled binaries.">
        <delete>
            <fileset>
                <include name="../../**/bin/**" />
                <include name="../../**/obj/**" />
                <include name="../../**/*.suo" />
                <include name="../../**/*.user" />
            </fileset>
        </delete>
    </target>
    
    <target name="build" description="Build all targets.">
        <call target="build.validation"/>
    </target>
    
    <target name="rebuild" depends="clean, build" />

    <target name="build.validation">
        <solution configuration="${configuration}" solutionfile="../../VisualStudio/Validation.sln">
        </solution>
        <property name="expected.output" value="bin/${configuration}/Bashwork.Validation.dll"/>
        <fail unless="${file::exists(expected.output)}">Output file doesn't exist in ${expected.output}</fail>
    </target>
    
</project>
