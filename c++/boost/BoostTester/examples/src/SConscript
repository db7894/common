#--------------------------------------------------------------------------------#
# Environment Options
#--------------------------------------------------------------------------------#
Import('env')
env = env.Clone()

#--------------------------------------------------------------------------------#
# Override Environment
#--------------------------------------------------------------------------------#
env.Append(
	CPPPATH	= ['../..'],
	LIBS	= ['Bashwork'],
	LIBPATH = ['../../../bin/Debug'],
)

#--------------------------------------------------------------------------------#
# Build Rules
#--------------------------------------------------------------------------------#
for file in Glob("*.cpp"):
	result = env.Program(file)
	env.Install('../bin/', result)
